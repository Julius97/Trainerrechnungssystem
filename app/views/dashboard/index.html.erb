<h1>Dashboard</h1>
<div id="tile_wrapper">
	<% if !mobile_device? %>
		<div class="tile_row">
			<div class="tile tile_span_2">
				<% if @current_user.admin_permissions %>
				<a href="/user">
				<% else %>
				<a href="/user/<%= @current_user.id %>">
				<% end %>
					<div class="img_wrapper">
						<% if @current_user.admin_permissions %>
							<h2>Trainer</h2>
						<% else %>
							<h2>Profil</h2>
						<% end %>
						<%= image_tag("profil_pic.jpeg", height: "160", width: "160") %>
					</div>
				</a>
			</div>
			<div class="tile tile_span_2">
				<a href="/customer">
					<div class="img_wrapper">
						<h2>Spieler</h2>
						<%= image_tag("player_picto.png", height: "160", width: "160") %>
					</div>
				</a>
			</div>
		</div>
		<div class="tile_row">
			<div class="tile tile_span_1">
				<div class="inner_tile_wrapper">
					<h2 id="time_status" style="margin-top:40px;">
						<%= DateTime.now.strftime("%H:%M") %>
					</h2>
					<h3 id="date_status">
						<%= DateTime.now.strftime("%a, %B %y") %>
					</h3>
				</div>
			</div>
			<div class="tile tile_span_1">
				<a href="/price">
					<div class="inner_tile_wrapper">
						<h2>Preise</h2>
						<h2 class="big_tile_h2">€</h2>
					</div>
				</a>
			</div>
			<div class="tile tile_span_2">
				<a href="/group">
					<div class="img_wrapper">
						<h2>Gruppen</h2>
						<%= image_tag("group_picto.png", height: "140", width: "140") %>
					</div>
				</a>
			</div>
		</div>
		<div class="tile_row">
			<% if @current_user.admin_permissions %>
				<div class="tile tile_span_2">
					<a href="/settings">
						<div class="img_wrapper" id="admin_tile">
							<h2>Verwaltung</h2>
							<%= image_tag("schloss.png", height: "130", width: "100") %>
						</div>
					</a>
				</div>
			<% end %>
			<div class="tile tile_span_1">
				<a href="/contact">
					<div class="inner_tile_wrapper">
						<h2 class="smaller_tile_h2">Kontakt</h2>
						<%= image_tag("info.png", height: "120", width: "120") %>
					</div>
				</a>
			</div>
			<div class="tile tile_span_1">
				<a href="/imprint">
					<div class="inner_tile_wrapper">
						<h2 class="small_tile_h2">Impressum</h2>
						<%= image_tag("paragraph.png", height: "120", width: "120") %>
					</div>
				</a>
			</div>
		</div>
	<% else %>
		<div class="tile_row">
			<div class="tile tile_span_4">
				<% if @current_user.admin_permissions %>
				<a href="/user">
				<% else %>
				<a href="/user/<%= @current_user.id %>">
				<% end %>
					<div class="img_wrapper">
						<% if @current_user.admin_permissions %>
							<h2>Trainer</h2>
						<% else %>
							<h2>Profil</h2>
						<% end %>
						<%= image_tag("profil_pic.jpeg", height: "100", width: "100") %>
					</div>
				</a>
			</div>
		</div>
		<div class="tile_row">
			<div class="tile tile_span_4">
				<a href="/customer">
					<div class="img_wrapper">
						<h2>Spieler</h2>
						<%= image_tag("player_picto.png", height: "100", width: "100") %>
					</div>
				</a>
			</div>
		</div>
		<div class="tile_row">
			<div class="tile tile_span_2">
				<div class="inner_tile_wrapper">
					<h2 id="time_status">
						<%= DateTime.now.strftime("%H:%M") %>
					</h2>
					<h3 id="date_status">
						<%= DateTime.now.strftime("%a, %B %y") %>
					</h3>
				</div>
			</div>
			<div class="tile tile_span_2">
				<a href="/price">
					<div class="inner_tile_wrapper">
						<h2>Preise</h2>
						<h2 class="big_tile_h2">€</h2>
					</div>
				</a>
			</div>
		</div>
		<div class="tile_row">
			<div class="tile tile_span_4">
				<a href="/group">
					<div class="img_wrapper">
						<h2>Gruppen</h2>
						<%= image_tag("group_picto.png", height: "90", width: "90") %>
					</div>
				</a>
			</div>
		</div>
		<% if @current_user.admin_permissions %>
			<div class="tile_row">
				<div class="tile tile_span_4">
					<a href="/settings">
						<div class="img_wrapper" id="admin_tile">
							<h2>Verwaltung</h2>
							<%= image_tag("schloss.png", height: "100", width: "75") %>
						</div>
					</a>
				</div>
			</div>
		<% end %>
		<div class="tile_row">
			<div class="tile tile_span_2">
				<a href="/contact">
					<div class="inner_tile_wrapper">
						<h2 class="smaller_tile_h2">Kontakt</h2>
						<%= image_tag("info.png", height: "80", width: "80") %>
					</div>
				</a>
			</div>
			<div class="tile tile_span_2">
				<a href="/imprint">
					<div class="inner_tile_wrapper">
						<h2 class="small_tile_h2">Impressum</h2>
						<%= image_tag("paragraph.png", height: "80", width: "80") %>
					</div>
				</a>
			</div>
		</div>
	<% end %>
</div>