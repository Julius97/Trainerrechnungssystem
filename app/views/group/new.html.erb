<h1>Neue Gruppe erstellen</h1>
<%= form_tag group_index_path, method: :post do %>
	<%= label_tag "name", "Bezeichnung" %><br />
	<%= text_field_tag "name" %><br /><br />
	<%= label_tag "accounting_group_id", "Abrechnungsgruppe" %>
	<select name="accounting_group_id">
		<% AccountingGroup.all.each do |accountingGroup| %>
			<option value="<%= accountingGroup.id %>"><%= accountingGroup.name %></option>
		<% end %>
	</select><br /><br />
	<%= label_tag "trainer_id", "Trainer" %>
	<select name="trainer_id">
		<% Trainer.all.each do |trainer| %>
			<option value="<%= trainer.id %>"><%= trainer.user.name %></option>
		<% end %>
	</select><br /><br />
	<%= label_tag "for_free", "Kostenlos fÃ¼r Spieler" %>
	<%= check_box_tag "for_free" %><br /><br />
	<%= label_tag "color_code" %>
	<%= color_field_tag "color_code","#207CE5" %>
	<br /><br />
	<%= submit_tag "Erstellen" %>
<% end %>